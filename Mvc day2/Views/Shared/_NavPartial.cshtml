<!--Nav Bar Partial View-->



<nav class="navbar navbar-expand-lg navbar-light" id="mainNav">
    <div class="container px-4 px-lg-5">
        @* <a class="navbar-brand" asp-action="index" asp-controller="Home">Start Bootstrap</a> *@
        <a class="navbar-brand" asp-action="index" asp-controller="Home">Academic System</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            Menu
            <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ms-auto py-4 py-lg-0">
               
                

                <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" asp-controller="Home" asp-action="Index">Home</a></li>
                
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link px-lg-3 py-3 py-lg-4 dropdown-toggle" href="#!" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            System
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Course" asp-action="index">Courses</a></li>
                            <li><a class="dropdown-item" asp-controller="Instructor" asp-action="Index">Instructors</a></li>
                            <li><a class="dropdown-item" asp-controller="Student" asp-action="Index">Students</a></li>
                            <li><a class="dropdown-item" asp-controller="Department" asp-action="Index">Deparments</a></li>
                        </ul>
                    </li>
                }
                @if (User.IsInRole("Admin"))
                {
                     <li class="nav-item dropdown">
                    <a class="nav-link px-lg-3 py-3 py-lg-4 dropdown-toggle" href="#!" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Identity
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-controller="Identity" asp-action="Role">Create Role</a></li>
                        <li><a class="dropdown-item" asp-controller="Identity" asp-action="SetRole">Set Role</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#!">Something else here</a></li>
                    </ul>
                </li>
                }

                @if (!User.Identity.IsAuthenticated)
                {
                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" asp-controller="Account" asp-action="Register">Register</a></li>
                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" asp-controller="Account" asp-action="LogIn">LogIn</a></li>
                }
                @if(User.Identity.IsAuthenticated)
                {

                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" asp-controller="Account" asp-action="SignOut">Sign Out</a></li>
                }
            
            </ul>
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <span class="text-warning fw-bolder">
           @User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role).Value
           </span>
        }
        else
        {
            <span class="text-info fst-italic">Welcome</span>
        }
    </div>

</nav>
