@model StudentIndexViewModel


<!-- Modal -->
<div class="modal fade" id="exampleModal-@Model.id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-warning">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Student</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              @Model.studentName
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal" onclick="Delete(@Model.id)">Confirm Delete!</button>
            </div>
        </div>
    </div>
</div>
