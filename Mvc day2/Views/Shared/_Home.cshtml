<!DOCTYPE html>

<html>
<head>
    
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico" />
    <link href="/css/LogInForm.css" rel="stylesheet" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/bootstrap/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/font/bootstrap-icons.min.css" rel="stylesheet" />
</head>
<body>

    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">

            <div class="position-relative navbar-brand bg-inf text-primary shadow ownRadias p-1 px-2 m-2 me-auto pe ">
                <svg class="position-absolute top-0 start-0 opacity-25 rounded-3" width="90px" height="33px">
                    <circle cx="0" cy="-30" r="40"
                            stroke="red" stroke-width="6" fill="none" />
                    <circle cx="0" cy="-30" r="58"
                            stroke="green" stroke-width="6" fill="none" />
                </svg>
                Academic System
            </div>
            <div class="ms-auto">
                <div class="toggle-switch">
                    <label class="switch-label">
                        <input id="toggleModeButton" type="checkbox" class="checkbox">
                        <span class="slider"></span>
                    </label>
                </div>
            </div>


        </div>
    </nav>








    <div class=" position-absolute top-50 start-50 name">
        <h1 class="position-absolute top-50 start-50 translate-middle siteWaterMark">Academic_System</h1>
    </div>

   @*  <div class="toggle-switch">
        <label class="switch-label">
            <input id="toggleModeButton" type="checkbox" class="checkbox">
            <span class="slider"></span>
        </label>
    </div>  *@ 

    <div>
        @RenderBody()
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/homeScript.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
