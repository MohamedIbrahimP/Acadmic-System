@model Department
@{
    ViewData["Title"] = "Update Department";
}
@section Head{
    <h1>Department</h1>
}
<div class="row">
    <div class="col-6 mx-auto">
        <form method="post" class="form" asp-action="Update">
            <div class="input-group my-2">
                <label asp-for="Name" class="input-group-text"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="input-group my-2">
                <label asp-for="Manager" class="input-group-text"></label>
                <input asp-for="Manager" class="form-control" />
                <span asp-validation-for="Manager" class="text-danger"></span>
            </div>

            <div class="my-1">
                <a asp-action="Index" class="btn btn-info me-1"><i class="bi bi-arrow-left"></i> Back</a>
                <input class="btn btn-success m-1" type="submit" value="Save!" />
            </div>


        </form>
    </div>
</div>


@section scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        }