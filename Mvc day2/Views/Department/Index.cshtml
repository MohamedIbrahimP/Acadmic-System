@model IEnumerable<Mvc_day2.Models.Department>
@{
    ViewData["Title"] = "Departments";
}
@section Head{
    <h1>Department</h1>
}
<a asp-action="Create" class="col-3 btn btn-outline-success m-1"><i class="bi bi-file-earmark-plus-fill"></i> Department</a>
<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Maneger</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>

    </tbody>
   
    @foreach (var item in Model)
    {
        
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Manager</td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger mx-2"><i class="bi bi-trash3-fill"></i></a>
                <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-warning mx-2"><i class="bi bi-pencil-square"></i></a>
            </td>
        </tr>
    
    }
</table>


