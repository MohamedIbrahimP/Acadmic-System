@model RoleViewModel

@{
    ViewData["Title"] = "Role";
    int x = 0;
    IEnumerable<IdentityRole> role = ViewBag.roles;
}

@section Head{
    <h1>Role</h1>
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Role">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="input-group my-2">
                <label asp-for="name" class="input-group-text"></label>
                <input asp-for="name" class="form-control" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="bi bi-file-earmark-plus-fill"></i> Role</button>
                
            </div>
        </form>
    </div>
    <!---------------------------->
    <div class="col-md-4">
        <table class="table  table-striped-columns">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                    <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var Role in @role)
                {
                    x++;
                    <tr>
                        <th scope="row">@x</th>
                        <td>@Role.Name</td>
                        <td>
                            <a class="btn btn-primary" asp-action="ManagePermissions" asp-route-roleId="@Role.Id">Manage Permissions</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        
    </div>
    <!------------->
</div>

@section Scripts {
    
   <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

