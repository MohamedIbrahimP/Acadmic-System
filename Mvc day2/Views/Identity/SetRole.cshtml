@model UserRoleViewModel

@{
    ViewData["Title"] = "Set Role";
    SelectList Users = new SelectList(ViewBag.users,"id","name");
}

@section Head {
    <h1>Set Role</h1>
}


<form asp-action="SetRole" class="row justify-content-center">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="col-md-4">
            <div class="input-group my-2">
                <label asp-for="name" class="input-group-text"></label>
            <select asp-for="name" asp-items="Users" name="id" class="form-select">
                <option value="0">--Select User--</option>
            </select>
                <span asp-validation-for="id" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Set Roles" class="btn btn-primary" />
        </div>
    </div>
 
    <div class="col-md-4">

        @foreach (var item in ViewBag.allroles)
                {
            <div class="form-check col-6">
                <input class="form-check-input" type="checkbox" value="@item.name" id="@item.id" name="roles">
                <label class="form-check-label" for="@item.id">
                    @item.name
                </label>
            </div>
            
                }


    </div>
    
    
</form>
