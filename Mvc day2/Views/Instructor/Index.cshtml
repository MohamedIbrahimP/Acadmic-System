@model List<Instructor>
@{
    ViewData["Title"] = "Instructors";
}
@section Head {
    <h1>Instructor</h1>
}
<a class="col-3 btn btn-outline-success m-1" asp-action="Create"> <i class="bi bi-file-earmark-plus-fill"></i> Instructor </a>
<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Address</th>
            <th>Image</th>
            <th>Department </th>
            <th>Course</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    </tbody>

    @foreach (var item in Model)
    {

        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Address</td>
            @if (item.profileImage != null)
            {
                <td><img alt="@item.Name" style="width:80px; height:80px; object-fit:cover;" class="rounded" src="data:image/*;base64, @(Convert.ToBase64String(@item.profileImage))" /></td>
            }
            else
            {
                <td><img alt="@item.Name" style="width:80px;" class="rounded" src="/images/avatar.jpg" /></td>
            }

            <td>@item.Department.Name</td>
            <td>@item.Course.Name</td>
            <td>
                <a class="btn btn-outline-danger mx-2" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3-fill"></i></a>
                <a class="btn btn-outline-warning mx-2" asp-action="Update" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
            </td>
        </tr>

    }
</table>
